{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./src/*"],
  "exclude": ["node_modules", "dist"]
}